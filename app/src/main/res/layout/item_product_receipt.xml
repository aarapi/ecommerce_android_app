<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="6dp"
        android:layout_margin="10dp"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/product_mage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header"
            android:background="@color/white"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cv_image"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/color_black"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="15sp"
        android:text="Laptop"></TextView>
    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_productName"
        android:layout_toRightOf="@+id/cv_image"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="13sp"
        android:text="Hello wor"
        android:layout_marginLeft="5dp"
        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description"
        android:layout_toRightOf="@+id/cv_image"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        >
    <TextView
        android:id="@+id/tv_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_multiply"
        android:layout_marginRight="5dp"
        android:textColor="@color/accent"
        android:textStyle="bold"
        android:text="3"
        ></TextView>

    <TextView
        android:id="@+id/tv_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_toLeftOf="@+id/tv_product_price"
        android:layout_marginRight="10dp"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        ></TextView>
        <TextView
            android:id="@+id/product_currenecy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALL "
            android:textColor="@color/accent"
            android:textStyle="bold"
            ></TextView>
    <TextView
    android:id="@+id/tv_product_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="20dp"
    android:text="300"
        android:textColor="@color/accent"
        android:textStyle="bold"
        ></TextView>
    </LinearLayout>

</RelativeLayout>